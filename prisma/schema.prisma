generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Calculation {
  id          Int     @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  area        Float
  basePrice   Float      @default(1500)
  totalPrice  Float
  notes       String?
  createdBy   String?
  factors     FactorValue[]
}

model Factor {
  id          Int     @id @default(autoincrement())
  name        String     
  description String?    
  value       Float      
  isPositive  Boolean    
  isActive    Boolean    @default(true)
  category    String?    
  
  factorValues FactorValue[] @relation("FactorToFactorValue")
}

model FactorValue {
  id          Int     @id @default(autoincrement())
  calculation  Calculation @relation(fields: [calculationId], references: [id])
  calculationId Int
  factor       Factor      @relation(fields: [factorId], references: [id], name: "FactorToFactorValue")
  factorId     Int
  isApplied    Boolean     @default(true)
}

model HeroSection {
  id         Int    @id @default(autoincrement())
  title      String
  subtitle   String
  buttonText String
  imageUrl   String
  createdAt  DateTime @default(now())
}

model ProjectCard {
  id          Int      @id @default(autoincrement())
  title       String
  price       String?
  description String?
  pros        String[]
  cons        String[]
  isFeatured  Boolean  @default(false)
  order       Int
}

model Pricing {
  id          Int    @id @default(1)
  pricePerM2  Int
}

model PricingCard {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  duration    String
  price       String
  features    String[]   
  order       Int         @default(0)
}

model ExtraServiceBlock {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  listItems   String[] 
  footerText  String
  fileUrl     String
  imageUrl    String
}